eval "$(/opt/homebrew/bin/brew shellenv)"
eval "$(zoxide init zsh)"

. ~/.secrets

if command -v /opt/homebrew/bin/brew 1>/dev/null; then
 export PATH="$(/opt/homebrew/bin/brew --prefix)/bin:${PATH}"
fi

. "$HOME/.cargo/env"

if [ -f "~/.secrets" ]; then source "~/.alias" ; fi
. ~/.config/alias

if [ -f "~/yandex-cloud/completion.zsh.inc" ]; then source "~/yandex-cloud/completion.zsh.inc"; fi

if command -v nvim 1>/dev/null; then
  export EDITOR=nvim
else
  export EDITOR=vim
fi

. $(brew --prefix)/opt/zsh-vi-mode/share/zsh-vi-mode/zsh-vi-mode.plugin.zsh
zvm_after_init_commands+=('source <(fzf --zsh)')

if [[ -s $HOMEBREW_PREFIX/etc/profile.d/bash_completion.sh ]]; then
  . "$HOMEBREW_PREFIX/etc/profile.d/bash_completion.sh"
fi

HISTFILE="$HOME/.zsh_history"
HISTSIZE=10000000
SAVEHIST=10000000

autoload -Uz compinit
compinit
source <(kubectl completion zsh)

export PATH="$PATH:$HOME/.local/bin"

export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

export XDG_CONFIG_HOME=~/.config
export CLAUDE_CODE_USE_BEDROCK=1
