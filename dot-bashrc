bind -x '"\C-l"':clear
bind -x '"\C-g"':'tmux popup -E -w 100% -h 100% lazygit'
bind '"^A" beginning-of-line'
bind '"^E" end-of-line'
bind '"^K" kill-line'
bind '"\C-n" next-history'
bind '"\C-p" previous-history'
bind '"\C-r" reverse-search-history'
bind '"\C-s" forward-search-history'
bind '"\C-w" backward-kill-word'
bind '"\C-u" unix-line-discard'
bind '"\C-b" backward-word'
bind '"\M-b" backward-word'
bind '"\M-f" forward-word'
bind '"\C-f" forward-word'
bind '"\M-d" kill-word'

if [ -x /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -x /home/linuxbrew/.linuxbrew/bin/brew ]; then
  eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

if command -v fzf >/dev/null 2>&1; then
  if [ -f "$HOME/.fzf.bash" ]; then
    . "$HOME/.fzf.bash"
  elif [ -f /opt/homebrew/opt/fzf/shell/key-bindings.bash ]; then
    . /opt/homebrew/opt/fzf/shell/key-bindings.bash
  elif [ -f /usr/share/fzf/key-bindings.bash ]; then
    . /usr/share/fzf/key-bindings.bash
  fi
fi

if command -v nvim >/dev/null 2>&1; then
  export EDITOR=nvim
else
  export EDITOR=vim
fi

if command -v just >/dev/null 2>&1; then
  eval "$(just --completions bash)"
fi

if [ -f "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

complete -W "\`grep -oE '^[a-zA-Z0-9_.-]+:([^=]|$)' ?akefile | sed 's/[^a-zA-Z0-9_.-]*$//'\`" make

export XDG_CONFIG_HOME="$HOME/.config"
export GOPATH="$HOME/go"
export PATH="$PATH:$HOME/.local/bin:$GOPATH/bin:$HOME/.antigravity/antigravity/bin"
export CLAUDE_CODE_USE_BEDROCK=1
